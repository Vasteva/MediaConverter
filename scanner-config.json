[
    {
        "path": "/storage/movies",
        "recursive": true,
        "includePatterns": [
            "*.mkv",
            "*.mp4",
            "*.avi",
            "*.mov"
        ],
        "excludePatterns": [
            "*_optimized.mkv",
            "*_temp*",
            ".*"
        ],
        "minFileSizeMB": 100,
        "minFileAgeMinutes": 5
    },
    {
        "path": "/storage/isos",
        "recursive": false,
        "includePatterns": [
            "*.iso"
        ],
        "excludePatterns": [],
        "minFileSizeMB": 500,
        "minFileAgeMinutes": 10
    },
    {
        "path": "/storage/tv-shows",
        "recursive": true,
        "includePatterns": [
            "*.mkv",
            "*.mp4"
        ],
        "excludePatterns": [
            "*_optimized.mkv"
        ],
        "minFileSizeMB": 50,
        "minFileAgeMinutes": 5
    }
]