# Environment Configuration Template
# Copy this file to .env and fill in your values

# Server Configuration
PORT=80
SOURCE_DIR=/storage
DEST_DIR=/output

# GPU Configuration (nvidia, intel, amd, cpu)
GPU_VENDOR=cpu

# AI Provider Configuration
# Options: openai, claude, gemini, ollama, none
AI_PROVIDER=none
AI_API_KEY=
AI_ENDPOINT=
AI_MODEL=

# Security
ADMIN_PASSWORD=changeme
LICENSE_KEY=

# Scanner Configuration
SCANNER_ENABLED=false
SCANNER_MODE=manual
SCANNER_PROCESSED_FILE=/data/processed.json

# Media Paths
MEDIA_ROOT=/mnt/media

# GitLab Container Registry (for deployment)
CI_REGISTRY_IMAGE=ghcr.io/vasteva/mediaconverter
CI_REGISTRY_USER=
CI_REGISTRY_PASSWORD=

# Deployment SSH Configuration
DEPLOY_HOST=server.vasteva.net
DEPLOY_USER=root
SSH_PRIVATE_KEY=
