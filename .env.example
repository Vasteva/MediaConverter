# Vastiva Media Converter - Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Server
# ===================
PORT=8080

# ===================
# Paths
# ===================
SOURCE_DIR=/storage
DEST_DIR=/output
MEDIA_ROOT=/mnt/media

# ===================
# Encoding
# ===================
# Options: nvidia, intel, amd, cpu
GPU_VENDOR=cpu
# Options: fast, medium, slow
QUALITY_PRESET=medium
CRF=23
MAX_CONCURRENT_JOBS=2

# ===================
# AI Integration
# ===================
# Options: gemini, openai, claude, ollama, none
AI_PROVIDER=none
AI_API_KEY=
AI_ENDPOINT=
AI_MODEL=

# ===================
# Authentication
# ===================
ADMIN_PASSWORD=
LICENSE_KEY=

# ===================
# File Scanner
# ===================
# Enable automatic file scanning
SCANNER_ENABLED=false
# Scan mode: manual, startup, periodic, watch, hybrid
SCANNER_MODE=manual
# Scan interval in seconds (for periodic/hybrid modes)
SCANNER_INTERVAL_SEC=300
# Automatically create jobs for discovered files
SCANNER_AUTO_CREATE=true
# Path to processed files database
SCANNER_PROCESSED_FILE=/data/processed.json
# Path to watch directories configuration (JSON file)
SCANNER_CONFIG_FILE=./scanner-config.json
